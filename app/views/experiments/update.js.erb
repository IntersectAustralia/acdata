<%= remotipart_response do %>
<% if @redirect_path %>

// redirect
window.location = '<%= @redirect_path %>';
window.location.hash = '<%= @scroll_anchor %>';
window.location.reload(true);
window.location.replace("<%= @redirect_path %>");
<% else %>

// update errors
$("#edit_experiment_error_explanation").html("<%= escape_javascript(render 'shared/modal_errors', :target => @experiment) %>");
$("#edit_experiment_error_explanation").addClass('alert');
$('input[type=submit]', '#wizard').removeClass('ac_loading');
$('.basic_field').removeAttr('disabled');
$('#back_button').removeAttr('disabled');
$('.remove_button').css('visibility', 'visible');
//$('.file_field')
<% end %>
<% end %>
