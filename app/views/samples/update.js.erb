<% if @redirect_path %>
<% flash[:notice] = "Sample was successfully updated." %>
window.location = '<%= @redirect_path %>';
window.location.reload(true)
window.location.replace("<%= @redirect_path %>");
<% else %>
$("#edit_sample_error_explanation").html("<%= escape_javascript(render 'shared/modal_errors', :target => @sample) %>");
$("#edit_sample_error_explanation").addClass('alert');
$('input[type=submit]', '#wizard').removeClass('ac_loading');
$('#back_button').removeAttr('disabled');
$('.basic_field').removeAttr('disabled');

<% end %>
