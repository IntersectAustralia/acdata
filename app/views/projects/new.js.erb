$('#new_project_dialog').jqmHide();
$('#wizard').html('<%= escape_javascript(render :partial => 'form', :locals => {:action => "new"}) %>');
var open = function(hash) {
    $('#jspecview').empty();
    hash.w.show();
};
var close = function(hash) {
    hash.w.hide();
    // Check if this is defined (dataset page views only)
    if (typeof addJspecView == 'function') {
      addJspecView('#jspecview');
    }
    hash.o.remove();
};
$('#new_project_dialog').jqm({ modal:true, onShow: open, onHide: close });
$('#new_project_dialog').jqmShow();
$('[id^=show_][id$=_wizard]').removeClass('ac_loading');
